<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="test.up.day.day.com.daytest.AsyncTaskCauseLeakActivity">

    <Button
        android:id="@+id/btn_leak_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="169dp"
        android:text="Leak 任务" />

    <Button
        android:id="@+id/btn_weak_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weak"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btn_leak_task"
        android:layout_alignStart="@+id/btn_leak_task" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn_weak_task"
        android:layout_alignRight="@+id/btn_weak_task"
        android:layout_below="@+id/btn_weak_task"
        android:layout_marginTop="13dp"
        android:text="Button" />
</RelativeLayout>
